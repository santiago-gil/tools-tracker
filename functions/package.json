{
  "name": "functions",
  "type": "module",
  "private": true,
  "main": "lib/index.js",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "serve": "npm run build && firebase emulators:start --only functions,hosting,firestore,auth",
    "deploy": "npm run build && firebase deploy --only functions",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:robustness": "vitest run src/tests/robustness.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.6",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.6.0",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "zod": "^3.23.8",
    "zod-openapi": "^2.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^20.11.0",
    "@vitest/ui": "^4.0.2",
    "eslint": "^9.0.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.2"
  }
}
