    "postcss": "^8.4.47",
    "rimraf": "^6.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^4.0.3"
  }
