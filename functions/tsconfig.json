{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "lib",
    "allowImportingTsExtensions": false,
    "paths": {
      "@shared/schemas": ["../shared/schemas"],
      "@shared/schemas/*": ["../shared/schemas/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
